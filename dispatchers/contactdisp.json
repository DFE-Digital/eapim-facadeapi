{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "MiddlewareResourceGroup": {
      "type": "string",
      "defaultValue": "s113d01-middleware"
    },
    "ServiceBusConnectionName": {
      "type": "string",
      "defaultValue": "s113d01-servicebus-conn"
    },
    "LogicAppLocation": {
      "type": "string",
      "minLength": 1,
      "allowedValues": [
        "[resourceGroup().location]",
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2"
      ],
      "defaultValue": "westeurope"
    },
    "LogicAppName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "s113d01-contactdisp-la-03"
    }
  },
  "variables": {},
  "resources": [
    {
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "manual": {
              "type": "Request",
              "kind": "Http",
              "inputs": {
                "method": "POST",
                "schema": {
                  "type": "object",
                  "required": [
                    "address1_city",
                    "address1_county",
                    "address1_line1",
                    "address1_line2",
                    "address1_line3",
                    "address1_postalcode",
                    "contactid",
                    "customertypecode",
                    "emailaddress1",
                    "fullname",
                    "mobilephone",
                    "parentcustomerid",
                    "telephone1"
                  ],
                  "properties": {
                    "address1_city": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "address1_county": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "address1_line1": {
                      "type": "string"
                    },
                    "address1_line2": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "address1_line3": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "address1_postalcode": {
                      "type": "string"
                    },
                    "contactid": {
                      "type": "string"
                    },
                    "customertypecode": {
                      "type": "object",
                      "required": [
                        "Value"
                      ],
                      "properties": {
                        "Value": {
                          "type": "integer",
                          "enum": [
                            1,
                            2,
                            3,
                            4,
                            200001,
                            200004
                          ]
                        }
                      }
                    },
                    "emailaddress1": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "fullname": {
                      "type": "string"
                    },
                    "mobilephone": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "parentcustomerid": {
                      "type": "object",
                      "required": [
                        "id"
                      ],
                      "properties": {
                        "id": {
                          "type": "string"
                        }
                      }
                    },
                    "telephone1": {
                      "type": "string"
                    }
                  }
                }
              },
              "operationOptions": "EnableSchemaValidation"
            }
          },
          "actions": {
            "Response": {
              "runAfter": {
                "Send_message": [
                  "Succeeded"
                ]
              },
              "type": "Response",
              "kind": "Http",
              "inputs": {
                "body": "Accepted",
                "statusCode": 202
              }
            },
            "Send_message": {
              "runAfter": {},
              "type": "ApiConnection",
              "inputs": {
                "body": {
                  "ContentData": "@{base64(triggerBody())}"
                },
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['servicebus']['connectionId']"
                  }
                },
                "method": "post",
                "path": "/@{encodeURIComponent(encodeURIComponent('crm-contact-created'))}/messages"
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "servicebus": {
                "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', 'westeurope', '/managedApis/', 'servicebus')]",
                "connectionId": "[resourceId(parameters('MiddlewareResourceGroup'), 'Microsoft.Web/connections', parameters('ServiceBusConnectionName'))]",
                "connectionName": "[parameters('ServiceBusConnectionName')]"
              }
            }
          }
        }
      },
      "name": "[parameters('LogicAppName')]",
      "type": "Microsoft.Logic/workflows",
      "location": "[parameters('LogicAppLocation')]",
      "tags": {
        "Environment": "Dev",
        "Parent Business": "TBC",
        "Service Offering": "TBC",
        "displayName": "LogicApp"
      },
      "apiVersion": "2016-06-01"
    }
  ],
  "outputs": {
    "logicAppResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Logic/workflows/', parameters('logicAppName'))]"
    }
  }
}